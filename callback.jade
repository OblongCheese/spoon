html(lang='en')
    head
        title Spoon
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0', name='viewport')
        link(rel='stylesheet', href='css/config.css')
        link(rel='stylesheet', href='css/slate.min.css')
    body
        .item-container
            .item-container-content
                .item.center
                    p.bottom-margin Connecting to Foursquare
                    .progress.blue
    script(src='js/slate.min.js')
    script(type='text/javascript').
        var q = location.hash.toString();
        if(q !== null && q.length > 0) {
            var myToken = q.substring(14);
            var result = {};
            if(myToken.length > 0) {
                result.result = true;
                result.token = myToken;
            } else {
                result.result = false;
                result.token = "";
            }
        }
    
        var redirectUrl = "pebblejs://close"; // auto-close
        window.location.href = redirectUrl + "#" + JSON.stringify(result.token);