body
    font-family 'Roboto', 'Helvetica', sans-serif

.layout-transparent
    color #191919

.layout-transparent .mdl-layout__header,
.layout-transparent .mdl-layout__drawer-button
    color #191919

.mdl-mini-footer
    background none
    color #2e2e2e

.mdl-navigation
    color #191919

.mdl-navigation__link
    display -webkit-box !important
    display -webkit-flex !important
    display -ms-flexbox !important
    display flex !important
    -webkit-box-orient horizontal
    -webkit-box-direction normal
    -webkit-flex-direction row
    -ms-flex-direction row
    flex-direction row
    -webkit-box-align center
    -webkit-align-items center
    -ms-flex-align center
    align-items center
    /*color rgba(255, 255, 255, 0.56)*/
    font-weight 500


.mdl-navigation__link .material-icons
  font-size 24px
  margin-right 32px


.card-wide > .mdl-card__supporting-text, .card-wide > .mdl-card__supporting-text ul
    font-size 18px
    line-height normal


.card-wide > .mdl-card__title
    color #fff
    height 400px
    background url('../img/spoon_in_action.jpg') center / cover


.card-wide > .mdl-card__title h2
    font-size 48px
    font-weight 400


.card-wide > .mdl-card__menu
    color #fff


.card-spacing
    margin-top 35px


.fab-install
    margin-top -28px
    position absolute
    right 28px


.top-padding
    padding-top 35px
